!!!5

mixin app
	#todoapp
		header
			h1 Todos
			input.new-todo(type='text', placeholder='What needs to be done?')
		section#main
			input.toggle-all(type='checkbox')
			label(for='toggle-all') Mark all as complete
			button.clear-db Clear Web SQL Database
			ul#todo-list
		footer
			a#clear-completed Clear completed
			#todo-count
			#instructions
			| Double-click to edit a todo.
			#credits
			| Created by
			br
			a(href='http://jgn.me/') Jérôme Gravel-Niquet
			| .
			br
			| Rewritten by:
			a(href='http://addyosmani.github.com/todomvc') TodoMVC
			| .
			

html
	head
		title Todos
		!= css('/todos')
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js", type="text/javascript")
		script#app-tpl(type='text/template')
			mixin app
		script#todo-tpl(type='text/template')
			input.toggle(type='checkbox')
			.name <%= name %>
		script#item-template(type='text/template')
			.view
				input.toggle(type="checkbox")
				label <%- name %>
			a.destroy
			input.edit(type="text", value!="<%- name %>")
		script#stats-template(type='text/template')
			//- <% if (done) { %>
			//- a#clear-completed Clear <%= done %> completed <%= done == 1 ? 'item' : 'items' %>
			//- <% } %>
			.todo-count
				b <%= remaining %>
				| <%= remaining == 1 ? 'item' : 'items' %> left
		!= js('/schema')
		!= js('/client-min')
		!= js('/todos')
	body
